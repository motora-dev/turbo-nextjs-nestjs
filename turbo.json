{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["build/**", ".vercel/**", "dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start:prd": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "cache": true
    },
    "format": {
      "cache": false
    },
    "format:fix": {
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "test:coverage": {
      "cache": true,
      "outputs": ["coverage/**"]
    }
  }
}
