{
  "name": "@monorepo/client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "find . -type d \\( -name \".next\" -o -name \".turbo\" -o -name \"coverage\" -o -name \"node_modules\" \\) -prune -exec rm -rf '{}' +",
    "build": "next build",
    "start": "next dev -p 3000",
    "start:prd": "next start -p 3000",
    "storybook": "storybook dev -p 6006",
    "check-types": "tsc --noEmit -p tsconfig.json",
    "check-types:spec": "tsc --noEmit -p tsconfig.spec.json",
    "format": "prettier --check \"src/**/*.tsx\"",
    "format:fix": "prettier --write \"src/**/*.tsx\"",
    "lint": "pnpm lint:eslint && pnpm lint:style",
    "lint:eslint": "next lint",
    "lint:style": "stylelint \"src/**/*.css\"",
    "lint:style:fix": "stylelint \"src/**/*.css\" --fix",
    "test": "pnpm test:jest && pnpm test:storybook",
    "test:coverage": "pnpm test:jest:coverage && pnpm test:storybook:coverage",
    "test:jest": "jest",
    "test:jest:coverage": "COLLECT_COVERAGE=true jest",
    "test:storybook": "vitest run --project=storybook",
    "test:storybook:coverage": "vitest run --project=storybook --coverage"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "google-auth-library": "^10.2.1",
    "lucide-react": "^0.539.0",
    "markdown-it": "^14.1.0",
    "next": "^15.4.2",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@monorepo/eslint-config": "workspace:*",
    "@monorepo/jest-config": "workspace:^",
    "@monorepo/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.3",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "babel-jest": "^30.0.5",
    "eslint-config-next": "^15.4.6",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-storybook": "9.1.10",
    "eslint-plugin-testing-library": "^7.6.6",
    "identity-obj-proxy": "^3.0.0",
    "storybook": "^9.1.10",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "@storybook/nextjs-vite": "^9.1.10",
    "vitest": "^3.2.4",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.56.0",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.spec.ts?(x)": [
      "tsc --noEmit -p tsconfig.spec.json"
    ],
    "src/**/!(*.spec).ts?(x)": [
      "tsc --noEmit -p tsconfig.json"
    ],
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --config eslint.config.js"
    ],
    "src/**/*.{css}": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
